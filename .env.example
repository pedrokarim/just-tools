# Configuration du projet Just Tools
# Copiez ce fichier vers .env.local et modifiez les valeurs selon vos besoins

# =============================================================================
# INFORMATIONS DE BASE
# =============================================================================

# Nom du site
NEXT_PUBLIC_SITE_NAME="Just Tools"

# Description du site
NEXT_PUBLIC_SITE_DESCRIPTION="Suite d'outils de développement gratuits"

# Version du projet
NEXT_PUBLIC_VERSION="1.0.0"

# =============================================================================
# URLs ET DOMAINES
# =============================================================================

# URL principale du site (production)
NEXT_PUBLIC_SITE_URL="https://just-tools.ascencia.re"

# URL de fallback (développement)
NEXT_PUBLIC_FALLBACK_URL="http://localhost:3000"

# =============================================================================
# CONTACT ET COMMUNICATION
# =============================================================================

# Email de contact
NEXT_PUBLIC_CONTACT_EMAIL="contact@ascencia.re"

# =============================================================================
# ENVIRONNEMENT
# =============================================================================

# Environnement (development, production, test)
NODE_ENV="development"

PORT=3000

# =============================================================================
# ANALYTICS ET MONITORING (optionnel)
# =============================================================================

# Google Analytics ID
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Vercel Analytics ID
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# =============================================================================
# FONCTIONNALITÉS AVANCÉES (optionnel)
# =============================================================================

# Activer les fonctionnalités expérimentales
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES="false"

# Limite de taille pour les uploads (en MB)
# NEXT_PUBLIC_MAX_UPLOAD_SIZE="10"

# =============================================================================
# NOTES
# =============================================================================

# - Toutes les variables commençant par NEXT_PUBLIC_ sont accessibles côté client
# - Les autres variables ne sont accessibles que côté serveur
# - Modifiez ces valeurs selon votre environnement de déploiement
# - N'oubliez pas de redémarrer le serveur après modification des variables d'environnement
