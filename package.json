{
  "name": "just-tools",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev --turbopack",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "bun --bun next lint",
    "test": "vitest --config vitest.config.test.ts",
    "test:ui": "vitest --config vitest.config.test.ts --ui",
    "test:run": "vitest --config vitest.config.test.ts run",
    "test:coverage": "vitest --config vitest.config.test.ts run --coverage",
    "postinstall": "bun --bun prisma generate",
    "db:generate": "bun --bun prisma generate",
    "db:migrate": "bun --bun prisma migrate dev",
    "db:studio": "bun --bun prisma studio",
    "db:push": "bun --bun prisma db push",
    "db:switch:sqlite": "node scripts/switch-database.js sqlite",
    "db:switch:postgresql": "node scripts/switch-database.js postgresql",
    "db:setup:sqlite": "bun run db:switch:sqlite && bun run db:generate && bun run db:push",
    "db:setup:postgresql": "bun run db:switch:postgresql && bun run db:generate && bun run db:migrate"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "better-auth": "^1.3.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colorthief": "^2.6.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.0.0",
    "jotai": "^2.12.5",
    "lucide-react": "^0.539.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "nuqs": "^2.4.3",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-country-flag": "^3.1.0",
    "react-dom": "19.1.0",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^6.0.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/tesseract.js": "^2.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "jsdom": "^24.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "vitest": "^2.1.8"
  }
}
